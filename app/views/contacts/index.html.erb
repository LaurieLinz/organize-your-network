<p id="notice"><%= notice %></p>

<h1>My Network</h1>

<table>
  <style>
    table, th, td {
      border: 1px solid black; padding: 10px;
    }
  </style>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Met on social platform</th>
      <th>Date met</th>
      <th>Availability</th>
      <th>Skillset</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.met_on_social_platform %></td>
        <td><%= contact.date_met %></td>
        <td><%= contact.availability %></td>
        <td><%= contact.skillset %></td>
        <td><%= contact.notes %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

